{
	"name": "Precise MD Clipper",
	"description": "Early WIP Web Clipper intended for use with Obsidian.md",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "src/chrome/background.ts"
	},
	"action": {},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["src/chrome/svelteContent.ts"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/svelteContent.css"],
			"matches": ["<all_urls>"]
		}
	],
	"permissions": ["activeTab", "downloads", "scripting", "storage"]
}
